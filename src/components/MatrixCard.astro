---
interface Props {
  species: {
    species_id: string;
    scientific_name: string;
    common_name: string;
    one_liner: string;
    habitat: string;
    height: string;
    image_400: string;
    image_800: string;
  };
}

const { species } = Astro.props;
---

<div class="matrix-card" data-species-id={species.species_id}>
  <img
    src={species.image_400}
    alt={`${species.common_name} (${species.scientific_name})`}
    loading="lazy"
  />
</div>
