<style>
  .site-footer {
    background-color: rgba(39, 41, 38, 0.9);
    padding: 2rem 1rem;
    margin-top: 4rem;
    border-top: 1px solid rgba(120, 129, 92, 0.3);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .footer-content p {
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
    margin: 1.5rem 0;
  }

  .footer-nav a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.2s, color 0.2s;
  }

  .footer-nav a:hover {
    color: var(--yellow-agave);
    opacity: 1;
  }

  .social-links {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-link {
    color: var(--muted-olive);
    font-size: 0.85rem;
  }

  .social-link:hover {
    color: var(--yellow-agave);
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 1.5rem 1rem;
    }

    .footer-nav {
      gap: 1rem;
      font-size: 0.85rem;
    }

    .footer-content p {
      font-size: 0.85rem;
    }
  }
</style>
