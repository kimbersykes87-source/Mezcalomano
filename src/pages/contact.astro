---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import contactImage from '../../assets/photos/contact_01_1600w.webp';
import ContactForm from '../ContactForm.astro';
---

<BaseLayout title="Contact | Mezcalómano" description="Get in touch with Mezcalómano">
  <section class="hero hero--page">
    <Image
      src={contactImage}
      alt=""
      class="hero-bg"
      loading="eager"
      formats={['webp', 'avif']}
      width={1600}
      height={1600}
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Contact</h1>
      <p>Have a question? We'd love to hear from you.</p>
    </div>
  </section>
  
  <div class="section">
    <div class="container">
      <ContactForm />
    </div>
  </div>
</BaseLayout>
