---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import contactImage from '../../assets/photos/contact_01_1600w.webp';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact | Mezcalómano" description="Get in touch with Mezcalómano">
  <div class="section">
    <div class="section-header-image">
      <Image
        src={contactImage}
        alt="Contact Mezcalómano"
        loading="eager"
        formats={['webp', 'avif']}
        width={1600}
        height={900}
      />
    </div>
    
    <div class="container">
      <div class="section-header">
        <h1>Contact</h1>
        <p>Have a question? We'd love to hear from you.</p>
      </div>
      
      <ContactForm client:load />
    </div>
  </div>
</BaseLayout>
