---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import contactImage from '../../assets/photos/contact_1600.jpg';
import ContactForm from '../ContactForm.astro';
---

<BaseLayout title="Contact | Mezcalómano" description="Get in touch with Mezcalómano">
  <section class="hero hero--page hero--contact">
    <Image
      src={contactImage}
      alt=""
      class="hero-bg hero-bg--contact"
      loading="eager"
      formats={['webp', 'avif']}
      width={1600}
      height={1600}
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="contact-heading">GET IN TOUCH</h1>
      <p>Have a question?<br />We'd love to hear from you. Email us at <a href="mailto:hola@mezcalomano.com">hola@mezcalomano.com</a>.</p>
    </div>
  </section>
  
  <div class="section section--contact">
    <div class="container">
      <ContactForm />
    </div>
  </div>
</BaseLayout>
