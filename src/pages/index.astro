---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
// Placeholder: replace with product shot when available
import homeHero from '../../assets/photos/home_hero_01_1600w.webp';
---

<BaseLayout title="Mezcalómano | Discover the Agave Species Behind Mezcal">
  <section class="hero hero--fullscreen">
    <Image
      src={homeHero}
      alt=""
      class="hero-bg"
      loading="eager"
      formats={['webp', 'avif']}
      width={1600}
      height={1600}
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <p class="hero-copy-line1">LIFE'S TOO SHORT FOR JUST ONE AGAVE…</p>
      <h1 class="hero-copy-line2">GO BEYOND ESPADIN</h1>
      <a href="/buy" class="btn btn-hero-cta">GET THE DISCOVERY DECK</a>
    </div>
  </section>
</BaseLayout>
