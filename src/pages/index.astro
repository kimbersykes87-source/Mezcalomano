---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import homeHero from '../../assets/photos/home_hero_01_1600w.webp';
---

<BaseLayout title="Mezcalómano | Discover the Agave Species Behind Mezcal">
  <section class="hero hero--fullscreen">
    <Image
      src={homeHero}
      alt=""
      class="hero-bg"
      loading="eager"
      formats={['webp', 'avif']}
      width={1600}
      height={1600}
    />
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Mezcalómano</h1>
      <p>Discover the agave species behind mezcal. Explore 40 species in our interactive matrix.</p>
      <a href="https://shop.mezcalomano.com" class="btn">Get the Discovery Deck</a>
    </div>
  </section>
</BaseLayout>
